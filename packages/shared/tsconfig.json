{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "noEmit": false,
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist/**/*", 
    "src/index.test.ts"
  ]
}
