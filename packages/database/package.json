{
  "name": "@network-monitor/database",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./repositories": {
      "types": "./dist/repositories/index.d.ts",
      "default": "./dist/repositories/index.js"
    },
    "./prisma": {
      "types": "./dist/prisma/index.d.ts",
      "default": "./dist/prisma/index.js"
    }
  },
  "prisma": {
    "schema": "./prisma/schema.prisma"
  },
  "scripts": {
    "prebuild": "prisma generate --schema=./prisma/schema.prisma",
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate --schema=./prisma/schema.prisma",
    "db:push": "prisma db push --schema=./prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=./prisma/schema.prisma",
    "db:seed": "bun run prisma/seed.ts",
    "postinstall": "prisma generate --schema=./prisma/schema.prisma"
  },
  "dependencies": {
    "@network-monitor/shared": "workspace:*",
    "@prisma/client": "^6.16.2"
  },
  "devDependencies": {
    "prisma": "^6.16.2",
    "typescript": "^5.5.4"
  }
}
